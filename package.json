{
  "name": "refinery",
  "displayName": "Refinery",
  "description": "Refine vague ideas into Thoroughly Engineered prompts for AI coding agents",
  "version": "0.2.0",
  "publisher": "avimaybe7",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/avimaybee/refinery"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "prompt",
    "ai",
    "gemini",
    "refine",
    "llm",
    "copilot",
    "prompt engineering"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "refinery.refine",
        "name": "refine",
        "fullName": "Refinery",
        "description": "Refine your vague prompts for AI coding agents",
        "isSticky": true,
        "commands": [
          {
            "name": "help",
            "description": "Show help and examples"
          },
          {
            "name": "templates",
            "description": "Browse prompt templates"
          },
          {
            "name": "history",
            "description": "Show refinement history"
          }
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "refinery",
          "title": "Refinery",
          "icon": "$(tools)"
        }
      ]
    },
    "views": {
      "refinery": [
        {
          "id": "refinery.history",
          "name": "History",
          "icon": "$(history)",
          "contextualTitle": "Refinement History"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "refinery.gettingStarted",
        "title": "Get Started with Refinery",
        "description": "Turn vague ideas into clear, actionable prompts",
        "steps": [
          {
            "id": "refinery.step.apiKey",
            "title": "Set Your API Key",
            "description": "Get a free Gemini API key and configure Refinery.\n\n[Get API Key](https://aistudio.google.com/apikey)\n\n[Set API Key](command:refinery.setApiKey)",
            "media": {
              "image": "media/walkthrough-key.svg",
              "altText": "API Key setup"
            },
            "completionEvents": [
              "onCommand:refinery.setApiKey"
            ]
          },
          {
            "id": "refinery.step.selectModel",
            "title": "Choose Your Model",
            "description": "Select your preferred Gemini model.\n\n[Select Model](command:refinery.selectModel)",
            "media": {
              "image": "media/walkthrough-model.svg",
              "altText": "Model selection"
            },
            "completionEvents": [
              "onCommand:refinery.selectModel"
            ]
          },
          {
            "id": "refinery.step.firstRefine",
            "title": "Refine Your First Prompt",
            "description": "Open Copilot Chat and type:\n\n`@refine make it look better`",
            "media": {
              "image": "media/walkthrough-refine.svg",
              "altText": "Refining a prompt"
            }
          },
          {
            "id": "refinery.step.choices",
            "title": "Handle Inline Choices",
            "description": "If your prompt is vague, you'll see options like `[option1 / option2]`.\n\nSimply delete the ones you don't want!",
            "media": {
              "image": "media/walkthrough-choices.svg",
              "altText": "Inline choices"
            }
          },
          {
            "id": "refinery.step.research",
            "title": "Built on Research",
            "description": "Refinery uses prompt engineering techniques from Anthropic's published research.\n\n[Learn More](https://www.anthropic.com/engineering/claude-code-best-practices)",
            "media": {
              "image": "media/walkthrough-research.svg",
              "altText": "Research basis"
            }
          }
        ]
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "refinery.refineSelection",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ]
    },
    "commands": [
      {
        "command": "refinery.setApiKey",
        "title": "Refinery: Set API Key",
        "icon": "$(key)"
      },
      {
        "command": "refinery.selectModel",
        "title": "Refinery: Select Model",
        "icon": "$(hubot)"
      },
      {
        "command": "refinery.showLogs",
        "title": "Refinery: Show Logs",
        "icon": "$(output)"
      },
      {
        "command": "refinery.exportLogs",
        "title": "Refinery: Export Logs",
        "icon": "$(export)"
      },
      {
        "command": "refinery.clearLogs",
        "title": "Refinery: Clear Logs",
        "icon": "$(clear-all)"
      },
      {
        "command": "refinery.showDashboard",
        "title": "Refinery: Open Dashboard",
        "icon": "$(dashboard)"
      },
      {
        "command": "refinery.refineSelection",
        "title": "Refinery: Refine Selection",
        "icon": "$(sparkle)"
      },
      {
        "command": "refinery.showHistory",
        "title": "Refinery: Show History",
        "icon": "$(history)"
      },
      {
        "command": "refinery.clearHistory",
        "title": "Refinery: Clear History",
        "icon": "$(trash)"
      },
      {
        "command": "refinery.copyHistoryEntry",
        "title": "Copy Refined Prompt",
        "icon": "$(copy)"
      },
      {
        "command": "refinery.showTemplates",
        "title": "Refinery: Browse Templates",
        "icon": "$(file-code)"
      }
    ],
    "keybindings": [
      {
        "command": "refinery.refineSelection",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "refinery.showDashboard",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ],
    "configuration": {
      "title": "Refinery",
      "properties": {
        "refinery.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google AI Studio API key. Get one at https://aistudio.google.com/apikey",
          "markdownDescription": "Your **Google AI Studio** API key. [Get one here](https://aistudio.google.com/apikey)."
        },
        "refinery.model": {
          "type": "string",
          "default": "gemini-2.5-flash",
          "description": "Gemini model name to use. Run 'Refinery: Select Model' to see available models.",
          "enum": [
            "gemini-2.5-flash",
            "gemini-2.0-flash",
            "gemini-1.5-pro",
            "gemini-1.5-flash"
          ],
          "enumDescriptions": [
            "Gemini 2.5 Flash - Latest fast model (recommended)",
            "Gemini 2.0 Flash - Fast and capable",
            "Gemini 1.5 Pro - Most capable, larger context",
            "Gemini 1.5 Flash - Fast and efficient"
          ]
        },
        "refinery.logLevel": {
          "type": "string",
          "default": "INFO",
          "enum": [
            "SILENT",
            "ERROR",
            "WARN",
            "INFO",
            "DEBUG"
          ],
          "enumDescriptions": [
            "No logging output",
            "Only error messages",
            "Errors and warnings",
            "Standard logging (recommended)",
            "Verbose debugging information"
          ],
          "description": "Controls the verbosity of Refinery logging output.",
          "markdownDescription": "Controls the **verbosity** of Refinery logging. Set to `DEBUG` for troubleshooting."
        },
        "refinery.cacheSize": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 500,
          "description": "Maximum number of refined prompts to cache (LRU eviction).",
          "markdownDescription": "Maximum number of refined prompts to **cache**. Uses LRU (Least Recently Used) eviction."
        },
        "refinery.cacheTTL": {
          "type": "number",
          "default": 3600000,
          "minimum": 60000,
          "description": "Cache time-to-live in milliseconds (default: 1 hour).",
          "markdownDescription": "Cache **TTL** (time-to-live) in milliseconds. Default: 1 hour (3600000ms)."
        },
        "refinery.showTips": {
          "type": "boolean",
          "default": true,
          "description": "Show helpful tips after refinements.",
          "markdownDescription": "Show **helpful tips** periodically after refinements."
        },
        "refinery.tipsInterval": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Show a tip every N refinements.",
          "markdownDescription": "Show a tip every **N** refinements."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0"
  }
}